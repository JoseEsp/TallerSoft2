<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jose.movilizateucn.ChoferActivity">

    <ListView
        android:id="@+id/navMenu"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background= "@color/lightGray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        <Button
            android:id="@+id/btnBuscarRuta"
            android:text = "Buscar Ruta"
            android:textColor="@color/blanco"
            android:backgroundTint="@color/cinnabargreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/perfil_margin"/>

        <Button
            android:id="@+id/btnConfigurarRuta"
            android:text = "Configurar Ruta"
            android:textColor="@color/blanco"
            android:backgroundTint="@color/cinnabargreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/perfil_margin" />
    </LinearLayout>



</android.support.v4.widget.DrawerLayout>
