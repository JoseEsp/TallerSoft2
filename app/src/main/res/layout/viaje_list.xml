<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/login_margin">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:backgroundTint="@color/cardview_shadow_end_color"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/login_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginRight="@dimen/login_margin">

                <ImageView
                    android:id="@+id/idCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_calendar"/>

                <TextView
                    android:id="@+id/lblFechaViaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/login_margin"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/niceBlack"/>

                <ImageView
                    android:id="@+id/idStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star" />

                <TextView
                    android:id="@+id/lblCalificacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/niceBlack"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <TextView
                android:id="@+id/lblNomComentador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comentador:"
                android:textSize="16dp"
                android:textColor="@color/niceBlack"
                android:layout_marginBottom="@dimen/login_margin"/>

            <TextView
                android:id="@+id/lblComentario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comentario"
                android:textSize="14dp"
                android:layout_marginBottom="@dimen/login_margin"
                android:textColor="@color/niceBlack"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>